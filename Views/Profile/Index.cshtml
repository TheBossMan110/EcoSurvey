            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #D1D5DB;
            transition: 0.4s;
            border-radius: 1.25rem;
        }

            .slider:before {
                position: absolute;
                content: "";
                height: 0.875rem;
                width: 0.875rem;
                left: 0.25rem;
                bottom: 0.1875rem;
                background-color: white;
                transition: 0.4s;
                border-radius: 50%;
            }

        input:checked + .slider {
            background-color: var(--primary);
        }

            input:checked + .slider:before {
