    <script>
        // Tab Switching
        const tabs = document.querySelectorAll('.tab-button');
        const tabContents = document.querySelectorAll('.tab-content');

        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                tabs.forEach(t => {
                    t.classList.remove('active');
                    t.style.borderBottom = 'none';
                });
                tab.classList.add('active');
                tab.style.borderBottom = '2px solid var(--primary)';

                const target = tab.id.replace('tab-', 'content-');
                tabContents.forEach(content => {
                    content.classList.add('hidden');
                    if (content.id === target) {
                        content.classList.remove('hidden');
                    }
                });
            });
        });

        // Settings Submenu
        const settingsButtons = document.querySelectorAll('.settings-content');
        const settingsContents = document.querySelectorAll('.settings-content');

        document.querySelectorAll('#btn-account, #btn-notifications, #btn-privacy, #btn-preferences, #btn-connected').forEach(button => {
            button.addEventListener('click', () => {
                const targetId = button.id.replace('btn-', 'content-');

                document.querySelectorAll('#btn-account, #btn-notifications, #btn-privacy, #btn-preferences, #btn-connected').forEach(btn => {
                    btn.classList.remove('bg-primary/5', 'text-primary');
                    btn.classList.add('text-gray-700');
                });

                button.classList.add('bg-primary/5', 'text-primary');
                button.classList.remove('text-gray-700');

                settingsContents.forEach(content => {
                    content.classList.add('hidden');
                    if (content.id === targetId) {
                        content.classList.remove('hidden');
                    }
                });
            });
        });

        // Dropdown Menus
        function toggleDropdown(dropdownId, menuId) {
            const dropdown = document.getElementById(dropdownId);
            const menu = document.getElementById(menuId);
            dropdown.addEventListener('click', () => {
                menu.classList.toggle('hidden');
            });
            document.addEventListener('click', (e) => {
                if (!dropdown.contains(e.target) && !menu.contains(e.target)) {
                    menu.classList.add('hidden');
                }
            });
            menu.querySelectorAll('button').forEach(button => {
                button.addEventListener('click', () => {
                    dropdown.querySelector('span').textContent = button.textContent;
                    menu.classList.add('hidden');
                });
            });
        }

        toggleDropdown('statusFilterDropdown', 'statusFilterMenu');
