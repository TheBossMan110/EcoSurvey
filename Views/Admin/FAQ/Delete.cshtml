@model EcoSurvey.Models.FAQ

@{
    ViewData["Title"] = "Delete FAQ";
    Layout = "_AdminLayout";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Delete FAQ</h1>
        <p class="page-subtitle">Confirm deletion of a frequently asked question</p>
    </div>
    <div class="page-actions">
        <a asp-action="Index" class="btn btn-outline">
            <i class="ri-arrow-left-line"></i>
            Back to List
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="text-center mb-6">
            <div class="w-16 h-16 rounded-full bg-red-100 mx-auto flex items-center justify-center text-red-500 mb-4">
                <i class="ri-delete-bin-line text-2xl"></i>
            </div>
            <h2 class="text-xl font-semibold text-gray-900 mb-2">Are you sure you want to delete this FAQ?</h2>
            <p class="text-gray-600">This action cannot be undone. This will permanently delete the FAQ from the system.</p>
        </div>

        <div class="bg-gray-50 p-4 rounded-lg mb-6">
            <div class="mb-4">
                <h3 class="text-lg font-medium text-gray-900">Question</h3>
                <p class="text-gray-700">@Model.Question</p>
            </div>

            <div class="mb-4">
                <h3 class="text-lg font-medium text-gray-900">Answer</h3>
                <p class="text-gray-700">@Model.Answer</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <h3 class="text-sm font-medium text-gray-900">Category</h3>
                    <p class="text-gray-700">@(string.IsNullOrEmpty(Model.Category) ? "General" : Model.Category)</p>
                </div>

                <div>
                    <h3 class="text-sm font-medium text-gray-900">Status</h3>
                    <p class="text-gray-700">@(Model.IsPublished ? "Published" : "Unpublished")</p>
                </div>

                <div>
                    <h3 class="text-sm font-medium text-gray-900">Last Updated</h3>
                    <p class="text-gray-700">@Model.LastUpdated.ToString("MMM dd, yyyy")</p>
                </div>
            </div>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="FaqId" />
            <div class="flex justify-center space-x-4">
                <a asp-action="Index" class="btn btn-outline">
                    <i class="ri-close-line"></i>
                    Cancel
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="ri-delete-bin-line"></i>
                    Delete FAQ
                </button>
            </div>
        </form>
    </div>
</div>
