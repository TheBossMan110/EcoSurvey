@{
    ViewData["Title"] = "Dashboard";
}

<!-- Page Header -->
<div class="flex items-center justify-between mb-6">
    <div>
        <h1 class="page-title">Dashboard</h1>
        <p class="page-subtitle">Welcome back, John! Here's what's happening with your environmental surveys.</p>
    </div>
    <div class="flex space-x-3">
        <button class="btn btn-secondary">
            <i class="ri-download-line btn-icon"></i>
            Export Report
        </button>
        <a asp-controller="Admin" asp-action="CreateSurvey" class="btn btn-primary">
            <i class="ri-add-line btn-icon"></i>
            Create Survey
        </a>
    </div>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
    <div class="card p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-500">Pending Approvals</p>
                <h3 class="text-2xl font-bold text-gray-900 mt-1">12</h3>
            </div>
            <div class="w-12 h-12 rounded-full bg-primary bg-opacity-10 flex items-center justify-center text-primary">
                <i class="ri-user-add-line"></i>
            </div>
        </div>
        <div class="flex items-center mt-4">
            <i class="ri-arrow-up-line text-green-500"></i>
            <span class="text-xs font-medium text-green-500 ml-1">+28%</span>
            <span class="text-xs text-gray-500 ml-2">from last week</span>
        </div>
    </div>

    <div class="card p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-500">Active Surveys</p>
                <h3 class="text-2xl font-bold text-gray-900 mt-1">8</h3>
            </div>
            <div class="w-12 h-12 rounded-full bg-blue-500 bg-opacity-10 flex items-center justify-center text-blue-500">
                <i class="ri-survey-line"></i>
            </div>
        </div>
        <div class="flex items-center mt-4">
            <i class="ri-arrow-up-line text-green-500"></i>
            <span class="text-xs font-medium text-green-500 ml-1">+12%</span>
            <span class="text-xs text-gray-500 ml-2">from last month</span>
        </div>
    </div>

    <div class="card p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-500">Ongoing Competitions</p>
                <h3 class="text-2xl font-bold text-gray-900 mt-1">3</h3>
            </div>
            <div class="w-12 h-12 rounded-full bg-yellow-500 bg-opacity-10 flex items-center justify-center text-yellow-500">
                <i class="ri-trophy-line"></i>
            </div>
        </div>
        <div class="flex items-center mt-4">
            <i class="ri-arrow-down-line text-red-500"></i>
            <span class="text-xs font-medium text-red-500 ml-1">-5%</span>
            <span class="text-xs text-gray-500 ml-2">from last month</span>
        </div>
    </div>

    <div class="card p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-500">Total Users</p>
                <h3 class="text-2xl font-bold text-gray-900 mt-1">1,254</h3>
            </div>
            <div class="w-12 h-12 rounded-full bg-purple-500 bg-opacity-10 flex items-center justify-center text-purple-500">
                <i class="ri-group-line"></i>
            </div>
        </div>
        <div class="flex items-center mt-4">
            <i class="ri-arrow-up-line text-green-500"></i>
            <span class="text-xs font-medium text-green-500 ml-1">+18%</span>
            <span class="text-xs text-gray-500 ml-2">from last month</span>
        </div>
    </div>
</div>

<!-- Main Content Grid -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Left Column -->
    <div class="lg:col-span-2 space-y-6">
        <!-- Participation Chart -->
        <div class="card">
            <div class="card-header flex items-center justify-between">
                <h3 class="card-title">Survey Participation</h3>
                <div class="flex space-x-2">
                    <button class="px-3 py-1 text-xs font-medium text-gray-700 bg-gray-100 rounded-full hover:bg-gray-200">Weekly</button>
                    <button class="px-3 py-1 text-xs font-medium text-white bg-primary rounded-full">Monthly</button>
                    <button class="px-3 py-1 text-xs font-medium text-gray-700 bg-gray-100 rounded-full hover:bg-gray-200">Yearly</button>
                </div>
            </div>
            <div class="card-body">
                <div id="participationChart" class="chart-container"></div>
            </div>
        </div>

        <!-- Recent Surveys -->
        <div class="card">
            <div class="card-header flex items-center justify-between">
                <h3 class="card-title">Recent Surveys</h3>
                <a href="#" class="text-sm text-primary font-medium hover:underline">View All</a>
            </div>
            <div class="overflow-x-auto">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Survey Name</th>
                            <th>Target Group</th>
                            <th>Status</th>
                            <th>Responses</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <div class="flex items-center">
                                    <div class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center text-blue-500 mr-3">
                                        <i class="ri-survey-line"></i>
                                    </div>
                                    <div>
                                        <p class="text-sm font-medium text-gray-900">Campus Waste Management</p>
                                        <p class="text-xs text-gray-500">Created on May 3, 2025</p>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="text-sm text-gray-900">Students</span>
                            </td>
                            <td>
                                <span class="badge badge-success">Active</span>
                            </td>
                            <td>
                                <span class="text-sm text-gray-900">342</span>
                            </td>
                            <td>
                                <div class="flex space-x-2">
                                    <button class="p-1 text-gray-500 hover:text-primary">
                                        <i class="ri-eye-line"></i>
                                    </button>
                                    <button class="p-1 text-gray-500 hover:text-primary">
                                        <i class="ri-edit-line"></i>
                                    </button>
                                    <button class="p-1 text-gray-500 hover:text-red-500">
                                        <i class="ri-delete-bin-line"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="flex items-center">
                                    <div class="w-8 h-8 rounded-full bg-purple-100 flex items-center justify-center text-purple-500 mr-3">
                                        <i class="ri-survey-line"></i>
                                    </div>
                                    <div>
                                        <p class="text-sm font-medium text-gray-900">Faculty Energy Conservation</p>
                                        <p class="text-xs text-gray-500">Created on May 1, 2025</p>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="text-sm text-gray-900">Faculty/Staff</span>
                            </td>
                            <td>
                                <span class="badge badge-success">Active</span>
                            </td>
                            <td>
                                <span class="text-sm text-gray-900">128</span>
                            </td>
                            <td>
                                <div class="flex space-x-2">
                                    <button class="p-1 text-gray-500 hover:text-primary">
                                        <i class="ri-eye-line"></i>
                                    </button>
                                    <button class="p-1 text-gray-500 hover:text-primary">
                                        <i class="ri-edit-line"></i>
                                    </button>
                                    <button class="p-1 text-gray-500 hover:text-red-500">
                                        <i class="ri-delete-bin-line"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="flex items-center">
                                    <div class="w-8 h-8 rounded-full bg-yellow-100 flex items-center justify-center text-yellow-500 mr-3">
                                        <i class="ri-survey-line"></i>
                                    </div>
                                    <div>
                                        <p class="text-sm font-medium text-gray-900">Water Conservation Awareness</p>
                                        <p class="text-xs text-gray-500">Created on Apr 28, 2025</p>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="text-sm text-gray-900">All Users</span>
                            </td>
                            <td>
                                <span class="badge badge-warning">Draft</span>
                            </td>
                            <td>
                                <span class="text-sm text-gray-900">-</span>
                            </td>
                            <td>
                                <div class="flex space-x-2">
                                    <button class="p-1 text-gray-500 hover:text-primary">
                                        <i class="ri-eye-line"></i>
                                    </button>
                                    <button class="p-1 text-gray-500 hover:text-primary">
                                        <i class="ri-edit-line"></i>
                                    </button>
                                    <button class="p-1 text-gray-500 hover:text-red-500">
                                        <i class="ri-delete-bin-line"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Right Column -->
    <div class="space-y-6">
        <!-- Registration Requests -->
        <div class="card">
            <div class="card-header flex items-center justify-between">
                <h3 class="card-title">Registration Requests</h3>
                <span class="badge badge-danger">12 Pending</span>
            </div>
            <div class="card-body space-y-4">
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-500 mr-3">
                            <i class="ri-user-line"></i>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-900">Emily Johnson</p>
                            <p class="text-xs text-gray-500">Student • Biology Department</p>
                        </div>
                    </div>
                    <div class="flex space-x-2">
                        <button class="p-1 text-red-500 hover:bg-red-50 rounded-full">
                            <i class="ri-close-line"></i>
                        </button>
                        <button class="p-1 text-green-500 hover:bg-green-50 rounded-full">
                            <i class="ri-check-line"></i>
                        </button>
                    </div>
                </div>
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <div class="w-10 h-10 rounded-full bg-purple-100 flex items-center justify-center text-purple-500 mr-3">
                            <i class="ri-user-line"></i>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-900">Michael Rodriguez</p>
                            <p class="text-xs text-gray-500">Student • Computer Science</p>
                        </div>
                    </div>
                    <div class="flex space-x-2">
                        <button class="p-1 text-red-500 hover:bg-red-50 rounded-full">
                            <i class="ri-close-line"></i>
                        </button>
                        <button class="p-1 text-green-500 hover:bg-green-50 rounded-full">
                            <i class="ri-check-line"></i>
                        </button>
                    </div>
                </div>
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <div class="w-10 h-10 rounded-full bg-green-100 flex items-center justify-center text-green-500 mr-3">
                            <i class="ri-user-line"></i>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-900">Sarah Williams</p>
                            <p class="text-xs text-gray-500">Faculty • Environmental Science</p>
                        </div>
                    </div>
                    <div class="flex space-x-2">
                        <button class="p-1 text-red-500 hover:bg-red-50 rounded-full">
                            <i class="ri-close-line"></i>
                        </button>
                        <button class="p-1 text-green-500 hover:bg-green-50 rounded-full">
                            <i class="ri-check-line"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="p-4 border-t bg-gray-50 rounded-b-lg">
                <button class="w-full py-2 text-sm font-medium text-primary hover:underline">View All Requests</button>
            </div>
        </div>

        <!-- Ongoing Competitions -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Ongoing Competitions</h3>
            </div>
            <div class="card-body space-y-5">
                <div class="space-y-3">
                    <div class="flex items-center justify-between">
                        <h4 class="text-base font-medium text-gray-900">Campus Green Challenge</h4>
                        <span class="badge badge-success">Active</span>
                    </div>
                    <div class="flex items-center text-sm text-gray-500">
                        <i class="ri-calendar-line mr-2"></i>
                        <span>Apr 20 - May 20, 2025</span>
                    </div>
                    <div class="flex items-center text-sm text-gray-500">
                        <i class="ri-group-line mr-2"></i>
                        <span>248 Participants</span>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-2">
                        <div class="bg-primary h-2 rounded-full" style="width: 65%"></div>
                    </div>
                    <div class="flex justify-between text-xs">
                        <span class="text-gray-500">15 days left</span>
                        <span class="text-primary font-medium">65% complete</span>
                    </div>
                </div>
                <div class="space-y-3">
                    <div class="flex items-center justify-between">
                        <h4 class="text-base font-medium text-gray-900">Recycling Innovation Contest</h4>
                        <span class="badge badge-success">Active</span>
                    </div>
                    <div class="flex items-center text-sm text-gray-500">
                        <i class="ri-calendar-line mr-2"></i>
                        <span>Apr 15 - May 15, 2025</span>
                    </div>
                    <div class="flex items-center text-sm text-gray-500">
                        <i class="ri-group-line mr-2"></i>
                        <span>127 Participants</span>
                    </div>
                    <div class="w-full bg-gray-200 rounded-full h-2">
                        <div class="bg-primary h-2 rounded-full" style="width: 80%"></div>
                    </div>
                    <div class="flex justify-between text-xs">
                        <span class="text-gray-500">10 days left</span>
                        <span class="text-primary font-medium">80% complete</span>
                    </div>
                </div>
            </div>
            <div class="p-4 border-t bg-gray-50 rounded-b-lg">
                <button class="w-full py-2 text-sm font-medium text-primary hover:underline">Manage Competitions</button>
            </div>
        </div>

        <!-- User Distribution -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">User Distribution</h3>
            </div>
            <div class="card-body">
                <div id="userDistributionChart" class="chart-container"></div>
            </div>
        </div>
    </div>
</div>
