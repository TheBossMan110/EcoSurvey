@{
    ViewData["Title"] = "Environmental Quiz";
}

<main class="container mx-auto px-4 py-8 mt-16 mb-16 min-h-screen">
    <div class="max-w-3xl mx-auto bg-white rounded-lg shadow-sm p-6 md:p-8">
        <div id="quiz-container">
            <div class="mb-6">
                <div class="text-2xl font-bold text-gray-800 mb-2">
                    Environmental Knowledge Quiz
                </div>
                <p class="text-gray-600">
                    Test your knowledge about environmental issues with this quiz.
                </p>
            </div>

            <form id="quiz-form" class="space-y-6">
                <div class="space-y-6">
                    <div class="question-container">
                        <p class="font-medium text-gray-800 mb-3">
                            1. Which of the following is a greenhouse gas?
                        </p>
                        <div class="space-y-2">
                            <label class="flex items-center custom-radio">
                                <input type="radio" name="q1" value="a" />
                                <span class="radio-mark mr-2"></span>
                                <span>Carbon Dioxide</span>
                            </label>
                            <label class="flex items-center custom-radio">
                                <input type="radio" name="q1" value="b" />
                                <span class="radio-mark mr-2"></span>
                                />
                                <span class="radio-mark mr-2"></span>
                                <span>Nitrogen</span>
                            </label>
                            <label class="flex items-center custom-radio">
                                <input type="radio" name="q1" value="c" />
                                <span class="radio-mark mr-2"></span>
                                <span>Oxygen</span>
                            </label>
                            <label class="flex items-center custom-radio">
                                <input type="radio" name="q1" value="d" />
                                <span class="radio-mark mr-2"></span>
                                <span>Hydrogen</span>
                            </label>
                        </div>
                    </div>

                    <div class="question-container">
                        <p class="font-medium text-gray-800 mb-3">
                            2. What is the main cause of ocean acidification?
                        </p>
                        <div class="space-y-2">
                            <label class="flex items-center custom-radio">
                                <input type="radio" name="q2" value="a" />
                                <span class="radio-mark mr-2"></span>
                                <span>Plastic pollution</span>
                            </label>
                            <label class="flex items-center custom-radio">
                                <input type="radio" name="q2" value="b" />
                                <span class="radio-mark mr-2"></span>
                                <span>Carbon dioxide absorption</span>
                            </label>
                            <label class="flex items-center custom-radio">
                                <input type="radio" name="q2" value="c" />
                                <span class="radio-mark mr-2"></span>
                                <span>Oil spills</span>
                            </label>
                            <label class="flex items-center custom-radio">
                                <input type="radio" name="q2" value="d" />
                                <span class="radio-mark mr-2"></span>
                                <span>Overfishing</span>
                            </label>
                        </div>
                    </div>

                    <div class="question-container">
                        <p class="font-medium text-gray-800 mb-3">
                            3. Which renewable energy source currently provides the most
                            electricity globally?
                        </p>
                        <div class="space-y-2">
                            <label class="flex items-center custom-radio">
                                <input type="radio" name="q3" value="a" />
                                <span class="radio-mark mr-2"></span>
                                <span>Solar power</span>
                            </label>
                            <label class="flex items-center custom-radio">
                                <input type="radio" name="q3" value="b" />
                                <span class="radio-mark mr-2"></span>
                                <span>Wind power</span>
                            </label>
                            <label class="flex items-center custom-radio">
                                <input type="radio" name="q3" value="c" />
                                <span class="radio-mark mr-2"></span>
                                <span>Hydropower</span>
                            </label>
                            <label class="flex items-center custom-radio">
                                <input type="radio" name="q3" value="d" />
                                <span class="radio-mark mr-2"></span>
                                <span>Geothermal power</span>
                            </label>
                        </div>
                    </div>

                    <div class="question-container">
                        <p class="font-medium text-gray-800 mb-3">
                            4. What is the primary cause of deforestation in the Amazon
                            rainforest?
                        </p>
                        <div class="space-y-2">
                            <label class="flex items-center custom-radio">
                                <input type="radio" name="q4" value="a" />
                                <span class="radio-mark mr-2"></span>
                                <span>Urban development</span>
                            </label>
                            <label class="flex items-center custom-radio">
                                <input type="radio" name="q4" value="b" />
                                <span class="radio-mark mr-2"></span>
                                <span>Agriculture and cattle ranching</span>
                            </label>
                            <label class="flex items-center custom-radio">
                                <input type="radio" name="q4" value="c" />
                                <span class="radio-mark mr-2"></span>
                                <span>Mining</span>
                            </label>
                            <label class="flex items-center custom-radio">
                                <input type="radio" name="q4" value="d" />
                                <span class="radio-mark mr-2"></span>
                                <span>Tourism</span>
                            </label>
                        </div>
                    </div>

                    <div class="question-container">
                        <p class="font-medium text-gray-800 mb-3">
                            5. Which of these activities contributes most to water
                            pollution?
                        </p>
                        <div class="space-y-2">
                            <label class="flex items-center custom-radio">
                                <input type="radio" name="q5" value="a" />
                                <span class="radio-mark mr-2"></span>
                                <span>Industrial waste discharge</span>
                            </label>
                            <label class="flex items-center custom-radio">
                                <input type="radio" name="q5" value="b" />
                                <span class="radio-mark mr-2"></span>
                                <span>Household sewage</span>
                            </label>
                            <label class="flex items-center custom-radio">
                                <input type="radio" name="q5" value="c" />
                                <span class="radio-mark mr-2"></span>
                                <span>Agricultural runoff</span>
                            </label>
                            <label class="flex items-center custom-radio">
                                <input type="radio" name="q5" value="d" />
                                <span class="radio-mark mr-2"></span>
                                <span>Recreational activities</span>
                            </label>
                        </div>
                    </div>

                    <button type="submit" class="w-full px-6 py-3 bg-primary text-white rounded-button hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2">
                        Submit Quiz
                    </button>
                </div>
            </form>
        </div>

        <div id="results-container" class="hidden">
            <div class="text-center">
                <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-primary/10 flex items-center justify-center">
                    <i class="ri-award-line ri-2x text-primary"></i>
                </div>
                <h2 class="text-2xl font-bold text-gray-800 mb-4">Quiz Results</h2>
                <div class="mb-6">
                    <div class="text-4xl font-bold text-primary mb-2">
                        <span id="score-percentage">0</span>%
                    </div>
                    <p class="text-gray-600">Correct Answers</p>
                </div>
                <div class="grid grid-cols-2 gap-4 mb-6">
                    <div class="bg-green-50 p-4 rounded-lg">
                        <div class="text-2xl font-bold text-green-600 mb-1">
                            <span id="correct-answers">0</span>
                        </div>
                        <p class="text-green-600">Correct</p>
                    </div>
                    <div class="bg-red-50 p-4 rounded-lg">
                        <div class="text-2xl font-bold text-red-600 mb-1">
                            <span id="wrong-answers">0</span>
                        </div>
                        <p class="text-red-600">Wrong</p>
                    </div>
                </div>
                <button onclick="retakeQuiz()" class="px-6 py-3 bg-primary text-white rounded-button hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2">
                    Retake Quiz
                </button>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const quizForm = document.getElementById("quiz-form");
            const quizContainer = document.getElementById("quiz-container");
            const resultsContainer = document.getElementById("results-container");

            const correctAnswers = {
                q1: "a",
                q2: "b",
                q3: "c",
                q4: "b",
                q5: "a",
            };

            quizForm.addEventListener("submit", function (e) {
                e.preventDefault();

                let score = 0;
                const formData = new FormData(quizForm);

                for (let [question, answer] of formData.entries()) {
                    if (correctAnswers[question] === answer) {
                        score++;
                    }
                }

                const percentage = (score / Object.keys(correctAnswers).length) * 100;
                const wrongAnswers = Object.keys(correctAnswers).length - score;

                document.getElementById("score-percentage").textContent = Math.round(percentage);
                document.getElementById("correct-answers").textContent = score;
                document.getElementById("wrong-answers").textContent = wrongAnswers;

                quizContainer.classList.add("hidden");
                resultsContainer.classList.remove("hidden");
            });
        });

        function retakeQuiz() {
            document.getElementById("quiz-form").reset();
            document.getElementById("quiz-container").classList.remove("hidden");
            document.getElementById("results-container").classList.add("hidden");
        }
    </script>
}
