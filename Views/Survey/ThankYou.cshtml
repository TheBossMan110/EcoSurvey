@{
    ViewData["Title"] = "Thank You";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>
        /* Custom radio and checkbox styles */
        .custom-radio,
        .custom-checkbox {
            position: relative;
            cursor: pointer;
            user-select: none;
            display: flex;
            align-items: center;
        }

        .radio-mark,
        .checkmark {
            position: relative;
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 2px solid #e5e7eb;
            border-radius: 50%;
            transition: all 0.2s ease;
        }

        .checkmark {
            border-radius: 4px;
        }

        .custom-radio input,
        .custom-checkbox input {
            position: absolute;
            opacity: 0;
            cursor: pointer;
        }

            .custom-radio input:checked ~ .radio-mark {
                border-color: var(--color-primary);
                background-color: var(--color-primary);
            }

            .custom-checkbox input:checked ~ .checkmark {
                border-color: var(--color-primary);
                background-color: var(--color-primary);
            }

                .custom-radio input:checked ~ .radio-mark:after,
                .custom-checkbox input:checked ~ .checkmark:after {
                    content: "";
                    position: absolute;
                    display: block;
                }

            .custom-radio input:checked ~ .radio-mark:after {
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                width: 8px;
                height: 8px;
                border-radius: 50%;
                background: white;
            }

            .custom-checkbox input:checked ~ .checkmark:after {
                left: 6px;
                top: 2px;
                width: 5px;
                height: 10px;
                border: solid white;
                border-width: 0 2px 2px 0;
                transform: rotate(45deg);
            }

        /* Rating styles */
        .rating-item {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            border: 2px solid #e5e7eb;
            cursor: pointer;
            position: relative;
            transition: all 0.2s ease;
        }

            .rating-item input {
                position: absolute;
                opacity: 0;
                cursor: pointer;
                height: 0;
                width: 0;
            }

        .rating-number {
            font-weight: 500;
            color: #6b7280;
            transition: color 0.2s ease;
        }

        .rating-item:hover {
            background-color: #f3f4f6;
        }

        /* Progress bar */
        .progress-bar {
            width: 100%;
            height: 8px;
            background-color: #e5e7eb;
            border-radius: 4px;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            border-radius: 4px;
            transition: width 0.3s ease;
        }

        :root {
            --color-primary: #3B82F6; /* You can customize this primary color */
        }
    </style>

    <!-- Example: Add Tailwind or custom styles if needed -->
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
</head>

<body>
    <main class="container mx-auto px-4 py-8 mt-16 mb-16 min-h-screen">
        <div class="max-w-3xl mx-auto bg-white rounded-lg shadow-sm p-6 md:p-8 text-center">
            <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-primary/10 flex items-center justify-center">
                <i class="ri-check-line ri-2x text-primary"></i>
            </div>
            <h1 class="text-2xl font-bold text-gray-800 mb-4">Thank You for Your Participation!</h1>
            <p class="text-gray-600 mb-6">
                Your survey responses have been successfully submitted. Your input is valuable and will help us improve our environmental initiatives.
            </p>
            <div class="mb-8">
                <div class="p-4 bg-green-50 rounded-lg inline-block">
                    <div class="flex items-center">
                        <i class="ri-award-line text-green-600 mr-2"></i>
                        <span class="text-green-600 font-medium">You've earned points for completing this survey!</span>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("Index", "SurveyBoard")" class="px-6 py-3 bg-primary text-white rounded-button hover:bg-primary/90 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 inline-block">
                Back to Survey Board
            </a>
        </div>
    </main>
</body>
</html>
